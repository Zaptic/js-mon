{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "outDir": "dist",
        "lib": ["ES2020"],
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "declaration": true,
        "noErrorTruncation": true,
        "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
